nav-height = 82 + 3*2px

#header
  padding 25px 0
  h1
    text-align center
    color #fff
    font 5em font-main-title
    letter-spacing 0.2em
    border-bottom 1px solid #fff
    border-top 0
    border-image linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 50%, rgba(255,255,255,0) 100%) 1
    -moz-border-image -moz-linear-gradient(left, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 50%, rgba(255,255,255,0) 100%) 1
    -o-border-image -o-linear-gradient(left, rgba(0,0,0,0) 0%, rgba(255,255,255,1) 50%, rgba(255,255,255,0) 100%) 1
  nav
    font 1.5em font-title
    line-height nav-height
    ul
      list-style none
      text-align center
      li
        margin 0 50px
        display inline-block

      a
        color #fff
        opacity 0.7
        transition 0.3s
        &:hover
          opacity 1
